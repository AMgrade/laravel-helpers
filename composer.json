{
    "name": "mcmatters/laravel-helpers",
    "description": "Laravel helper functions",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Borzyonok",
            "email": "dima.matters@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/support": "5.*",
        "illuminate/database": "5.*",
        "symfony/debug": "3.* || 4.*",
        "symfony/http-foundation": "3.* || 4.*"
    },
    "autoload": {
        "psr-4": {
            "McMatters\\Helpers\\": "src/Classes"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "McMatters\\Helpers\\Tests\\": "tests/mocks/Classes"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "codeclimate/php-test-reporter": "^0.4.4"
    }
}
